<div class="tab-container" data-tabs>
  <div class="tab-buttons">
  </div>
  <div class="tab-content">
    <slot />
  </div>
</div>

<script is:inline>
  (function() {
    function addCopyButtons() {
      document.querySelectorAll('pre code').forEach((codeBlock) => {
        const pre = codeBlock.parentElement;
        if (pre.querySelector('.copy-btn')) return; // Avoid duplicates

        const button = document.createElement('button');
        button.className = 'copy-btn';
        button.textContent = 'Copy Code';
        button.onclick = () => {
          navigator.clipboard.writeText(codeBlock.textContent).then(() => {
            button.textContent = 'Copied!';
            button.classList.add('copied');
            setTimeout(() => {
              button.textContent = 'Copy Code';
              button.classList.remove('copied');
            }, 2000);
          }).catch(err => {
            console.error('Failed to copy: ', err);
            button.textContent = 'Failed to copy';
          });
        };
        pre.style.position = 'relative';
        pre.appendChild(button);
      });
    }

    function initializeTabs() {
      const tabContainers = document.querySelectorAll('[data-tabs]');
      
      tabContainers.forEach((container) => {
        const tabItems = container.querySelectorAll('[data-tab-item]');
        const tabButtonsContainer = container.querySelector('.tab-buttons');
        
        if (!tabItems.length || !tabButtonsContainer) return;
        
        // Clear existing buttons
        tabButtonsContainer.innerHTML = '';
        
        // Create tab buttons
        tabItems.forEach((item, index) => {
          const label = item.getAttribute('data-label') || `Tab ${index + 1}`;
          const button = document.createElement('button');
          
          // Define colors for each tab index
          const colors = [
            { default: '#667eea', hover: '#5a67d8', darkDefault: '#a78bfa', darkHover: '#c4b5fd' }, // Purple
            { default: '#f5576c', hover: '#e53e3e', darkDefault: '#fb7185', darkHover: '#fda4af' }, // Pink/Red
            { default: '#4facfe', hover: '#3182ce', darkDefault: '#60a5fa', darkHover: '#93c5fd' }, // Blue
            { default: '#43e97b', hover: '#38a169', darkDefault: '#34d399', darkHover: '#6ee7b7' }, // Green
            { default: '#fa709a', hover: '#d69e2e', darkDefault: '#fbbf24', darkHover: '#fcd34d' }, // Pink/Yellow
            { default: '#a8edea', hover: '#319795', darkDefault: '#22d3ee', darkHover: '#67e8f9' }, // Teal
            { default: '#ff9a9e', hover: '#ed64a6', darkDefault: '#f472b6', darkHover: '#f9a8d4' }, // Light Pink
            { default: '#a18cd1', hover: '#9f7aea', darkDefault: '#c084fc', darkHover: '#ddd6fe' }  // Purple/Pink
          ];
          
          const colorIndex = index % colors.length;
          const color = colors[colorIndex];
          
          // Check if dark mode
          const isDarkMode = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          const defaultColor = isDarkMode ? color.darkDefault : color.default;
          const hoverColor = isDarkMode ? color.darkHover : color.hover;
          
          button.className = `tab-button tab-color-${index} ${index === 0 ? 'active' : ''}`;
          button.textContent = label;
          button.setAttribute('data-tab-index', index.toString());
          
          // Apply inline styles for immediate effect
          button.style.color = defaultColor;
          button.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
          
          // Add hover effects
          button.addEventListener('mouseenter', () => {
            if (!button.classList.contains('active')) {
              button.style.color = hoverColor;
              button.style.transform = 'translateY(-2px) scale(1.02)';
            }
          });
          
          button.addEventListener('mouseleave', () => {
            if (!button.classList.contains('active')) {
              button.style.color = defaultColor;
              button.style.transform = '';
            }
          });
          
          button.addEventListener('click', () => {
            // Remove active class from all buttons and tabs
            container.querySelectorAll('.tab-button').forEach((b, bIndex) => {
              b.classList.remove('active');
              // Reset styles for non-active buttons
              const bColorIndex = bIndex % colors.length;
              const bColor = colors[bColorIndex];
              const bDefaultColor = isDarkMode ? bColor.darkDefault : bColor.default;
              b.style.color = bDefaultColor;
              b.style.background = '';
              b.style.boxShadow = '';
              b.style.transform = '';
            });
            container.querySelectorAll('[data-tab-item]').forEach(t => t.classList.remove('active'));
            
            // Add active class to clicked button and corresponding tab
            button.classList.add('active');
            item.classList.add('active');
            
            // Set active button with colored background and white text
            button.style.color = 'white';
            button.style.background = `linear-gradient(135deg, ${defaultColor}, ${hoverColor})`;
            button.style.boxShadow = `0 4px 12px rgba(${parseInt(defaultColor.slice(1, 3), 16)}, ${parseInt(defaultColor.slice(3, 5), 16)}, ${parseInt(defaultColor.slice(5, 7), 16)}, 0.4)`;
            button.style.transform = 'translateY(-3px) scale(1.05)';
            
            // Add copy buttons to the newly active tab content
            setTimeout(() => {
              addCopyButtons();
            }, 100);
          });
          
          tabButtonsContainer.appendChild(button);
          
          // Show first tab by default
          if (index === 0) {
            item.classList.add('active');
            // Set first tab as active with colored background
            button.style.color = 'white';
            button.style.background = `linear-gradient(135deg, ${defaultColor}, ${hoverColor})`;
            button.style.boxShadow = `0 4px 12px rgba(${parseInt(defaultColor.slice(1, 3), 16)}, ${parseInt(defaultColor.slice(3, 5), 16)}, ${parseInt(defaultColor.slice(5, 7), 16)}, 0.4)`;
            button.style.transform = 'translateY(-3px) scale(1.05)';
          }
          
          // Listen for dark mode changes
          if (window.matchMedia) {
            const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
            mediaQuery.addListener(() => {
              if (!button.classList.contains('active')) {
                const newIsDarkMode = mediaQuery.matches;
                const newDefaultColor = newIsDarkMode ? color.darkDefault : color.default;
                button.style.color = newDefaultColor;
              }
            });
          }
        });
        
        // Add copy buttons to the initially active tab
        setTimeout(() => {
          addCopyButtons();
        }, 100);
      });
    }

    // Initialize tabs
    document.addEventListener('DOMContentLoaded', initializeTabs);
    document.addEventListener('astro:page-load', initializeTabs);
    
    if (document.readyState !== 'loading') {
      setTimeout(initializeTabs, 100);
    }
  })();
</script>

<style>
