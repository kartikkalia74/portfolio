    display: flex;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding: 6px;
    gap: 4px;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    position: relative;
